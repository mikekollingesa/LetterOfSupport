    <script>
        // D365 Integration JavaScript
        
        // Wiki link URLs - Update these with your actual wiki URLs
        const wikiLinks = {
            'getting-started': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/Getting-Started.aspx',
            'request-types': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/Request-Types.aspx',
            'approval-workflows': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/Approval-Workflows.aspx',
            'docusign-guide': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/DocuSign-Guide.aspx',
            'reporting': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/Reporting.aspx',
            'troubleshooting': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/FAQ.aspx',
            'admin': 'https://yourcompany.sharepoint.com/sites/wiki/SitePages/Administration.aspx',
            'support': 'mailto:support@yourcompany.com'
        };

        // Initialize page when loaded
        document.addEventListener('DOMContentLoaded', function() {
            initializePage();
        });

        function initializePage() {
            // Check if running in D365 context
            if (typeof Xrm !== 'undefined') {
                loadUserInfo();
                loadRecentActivity();
            } else {
                // Fallback for testing outside D365
                document.getElementById('userInfo').textContent = 'Welcome, Test User';
                document.getElementById('recentActivity').innerHTML = 
                    'â€¢ Request #FR-2024-001 approved<br>' +
                    'â€¢ DocuSign sent for FR-2024-002<br>' +
                    'â€¢ New request submitted';
            }
        }

        function loadUserInfo() {
            try {
                var userContext = Xrm.Utility.getGlobalContext().userSettings;
                document.getElementById('userInfo').textContent = 'Welcome, ' + userContext.userName;
            } catch (error) {
                console.log('Could not load user info:', error);
            }
        }

        function loadRecentActivity() {
            try {
                // Replace 'new_fundingrequest' with your actual entity name
                Xrm.WebApi.retrieveMultipleRecords("new_fundingrequest", 
                    "?$select=new_name,statuscode,createdon&$top=3&$orderby=createdon desc")
                .then(function(result) {
                    updateRecentActivity(result.entities);
                })
                .catch(function(error) {
                    console.log('Error loading recent activity:', error);
                    document.getElementById('recentActivity').innerHTML = 
                        'Unable to load recent activity';
                });
            } catch (error) {
                console.log('D365 Web API not available:', error);
            }
        }

        function updateRecentActivity(entities) {
            var activityHtml = '';
            entities.forEach(function(entity) {
                var statusText = getStatusText(entity.statuscode);
                var date = new Date(entity.createdon).toLocaleDateString();
                activityHtml += 'â€¢ ' + entity.new_name + ' - ' + statusText + ' (' + date + ')<br>';
            });
            
            if (activityHtml === '') {
                activityHtml = 'No recent activity';
            }
            
            document.getElementById('recentActivity').innerHTML = activityHtml;
        }

        function getStatusText(statusCode) {
            // Map your status codes to readable text
            var statusMap = {
                1: 'Draft',
                2: 'Submitted',
                3: 'Under Review',
                4: 'Approved',
                5: 'Rejected',
                6: 'Completed'
            };
            return statusMap[statusCode] || 'Unknown';
        }

        function navigateToEntity(entityName) {
            if (typeof Xrm !== 'undefined') {
                try {
                    Xrm.Navigation.navigateTo({
                        pageType: "entitylist",
                        entityName: entityName
                    });
                } catch (error) {
                    console.log('Navigation error:', error);
                    alert('Navigation to ' + entityName + ' is not available in this context.');
                }
            } else {
                alert('Would navigate to: ' + entityName);
            }
        }

        function navigateToPage(pageName) {
            if (typeof Xrm !== 'undefined') {
                try {
                    // Implement custom page navigation based on your app structure
                    console.log('Navigate to page:', pageName);
                    alert('Navigation to ' + pageName + ' page would be implemented here.');
                } catch (error) {
                    console.log('Navigation error:', error);
                }
            } else {
                alert('Would navigate to: ' + pageName + ' page');
            }
        }

        function openWikiLink(linkKey) {
            var url = wikiLinks[linkKey];
            if (url) {
                if (url.startsWith('mailto:')) {
                    window.location.href = url;
                } else {
                    window.open(url, '_blank');
                }
            } else {
                alert('Wiki link for "' + linkKey + '" not configured yet.');
            }
        }
    </script>
