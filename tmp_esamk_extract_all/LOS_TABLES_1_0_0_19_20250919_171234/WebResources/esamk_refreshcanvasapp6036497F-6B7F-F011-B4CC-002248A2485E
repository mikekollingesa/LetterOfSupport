// A function that will be called by the model-driven form's OnLoad event.
function onFormLoad(executionContext) {

    // --- TEMPORARY TEST ---
    alert("FormRefreshScript is running!"); 
    // ----------------------
    
    // 1. Get the form's context from the event that triggered the function.
    // This context is the bridge that lets our code interact with the form.
    var formContext = executionContext.getFormContext();

    // 2. Tell the form's data to refresh itself from the database.
    // The 'true' parameter tells it to save any unsaved changes on the form first.
    formContext.data.refresh(true);
}